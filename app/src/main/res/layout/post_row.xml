<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

    <TextView
            android:text="Lorem ipsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userName_label"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/userProfilePic_imageview"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/userProfilePic_imageview"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/userProfilePic_imageview" />

    <TextView
            android:text="11.17.19 11:35 PM"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName_label"
            android:layout_alignStart="@+id/userName_label"
            android:id="@+id/userDate_label" />

    <TextView
            android:text="Lorem ipsum dolor sit er elit lamet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfilePic_imageview"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginEnd="12dp"
            android:id="@+id/userDesc_textview"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    <ImageView
            android:layout_height="307dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/userPhoto_imageview"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/userDesc_textview" />


    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/userProfilePic_imageview"/>

</RelativeLayout>